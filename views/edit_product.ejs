<%- include('header', {title: 'Edytuj produkt'}) %>

<div class="container">
    <div class="row" style="">
        <div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Edytuj produkt</h3>
			 	</div>
			  	<div class="panel-body">
			    	<form accept-charset="UTF-8" role="form" method="post" action="/edit_product">
                    <fieldset>
                        <input type="hidden" name="id" value="<%= id %>">
			    	  	<div class="form-group">
			    		    <input class="form-control" placeholder="Nazwa" name="name" type="text" value="<%= name %>">
			    		</div>
			    		<div class="form-group">
			    			<input class="form-control" placeholder="Opis" name="description" type="text" value="<%= description %>">
			    		</div>
			    		<div class="form-group">
			    			<input class="form-control" placeholder="Cena" name="price" type="number" min="1" max="1000000" step="1" value="<%= price %>">
			    		</div>
						<div class="form-group">
			    			<input class="form-control" value="<%= img %>" placeholder="Link do obrazka" name="img" type="url">
			    		</div>
			    		<input class="btn btn-lg btn-success btn-block" type="submit" value="Zapisz zmiany">
			    	</fieldset>
			      	</form>
			    </div>
			</div>
		</div>
	</div>
</div>