<%- include('header', {title: 'Panel administracyjny'}) %>

<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="/admin.css">

<script>
function addProduct() {
    window.location.replace('/add_product');
}
</script>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-list"></span>Produkty
                    <div class="pull-right action-buttons">
                        <div class="btn-group pull-right">
                            <button type="button" class="btn btn-default btn-xs" onclick="addProduct()">
                                <span class="glyphicon glyphicon-plus" style="margin-right: 0px;"></span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                        <% products.forEach((product) => { %>
                            <li class="list-group-item">
                                <%= product.name %>
                                <div class="pull-right action-buttons">
                                    <a href="/edit_product/<%= product._id %>"><span class="glyphicon glyphicon-pencil"></span></a>
                                    <a href="/delete_product/<%= product._id %>" class="trash"><span class="glyphicon glyphicon-trash"></span></a>
                                </div>
                            </li>                            
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-list"></span>Użytkownicy
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                <% users.forEach((user) => { %>
                    <% if (user.role === 'admin') { %>
                    <li class="list-group-item" style="color: rgb(209, 91, 71);">
                        <%= user.login %>
                    </li>
                    <% } else if (user.role === 'user') { %>
                    <li class="list-group-item">
                        <%= user.login %>
                    </li>
                    <% } %>
                <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-list"></span>Złożone zamówienia
                </div>
                <div class="panel-body">
                <% placedOrders.forEach((order, num) => { %>
                    <ul class="list-group">
                        <li class="list-group-item">
                          <div class="row toggle" id="dropdown-detail-<%= num+1 %>" data-toggle="detail-<%= num+1 %>">
                            <div class="col-xs-10">
                                Zamówienie <%= num+1 %> // <%= order.login %>
                            </div>
                            <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                          </div>
                        <div id="detail-<%= num+1 %>">
                            <hr></hr>
                            <div class="container">
                                <div class="fluid-row">
                                    <div class="col-xs-5">
                                        <% var keys = Object.keys(order.cart) %>
                                        <% keys.forEach((name, i) => { %>
                                        <%= name %><% if (order.cart[name] > 1) { %> x<%= order.cart[name] %> <% } %><% if (i != keys.length - 1) { %>,<% } %>
                                        <% }) %>
                                    </div>
                                </div>
                            </div>
                        </li>
                <% }) %>
                    </div>                          
                  </ul>
                </div>
            </div>
        
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-list"></span>Otwarte zamówienia
                </div>
                <div class="panel-body">
                <% pendingOrders.forEach((order, num) => { %>
                    <ul class="list-group">
                        <li class="list-group-item">
                          <div class="row toggle" id="dropdown-detail-<%= placedOrders.length+num+1 %>" data-toggle="detail-<%= placedOrders.length+num+1 %>">
                            <div class="col-xs-10">
                                Zamówienie <%= num+1 %> // <%= order.login %>
                            </div>
                            <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                          </div>
                        <div id="detail-<%= placedOrders.length+num+1 %>">
                            <hr></hr>
                            <div class="container">
                                <div class="fluid-row">
                                    <div class="col-xs-5">
                                        <% var keys = Object.keys(order.cart) %>
                                        <% keys.forEach((name, i) => { %>
                                        <%= name %><% if (order.cart[name] > 1) { %> x<%= order.cart[name] %> <% } %><% if (i != keys.length - 1) { %>,<% } %>
                                        <% }) %>
                                    </div>
                                </div>
                            </div>
                        </li>
                <% }) %>
                    </div>                          
                  </ul>
                </div>
            </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('[id^=detail-]').hide();
    $('.toggle').click(function() {
        $input = $( this );
        $target = $('#'+$input.attr('data-toggle'));
        $target.slideToggle();
    });
});
</script>