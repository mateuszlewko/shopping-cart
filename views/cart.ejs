<%- include('header', {title: 'Koszyk', cart: true}) %>

<div class="container">
    <div class="row">
        <div class="col-xs-8" style="float:none; margin: auto;">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5><span class="glyphicon glyphicon-shopping-cart"></span> Koszyk </h5>
                            </div>
                            <div class="col-xs-4" style="float:right;">
                                <a href="/">
                                    <button type="button" href="/" class="btn btn-primary btn-sm btn-block">
                                        <span class="glyphicon glyphicon-share-alt"></span> Kontynuuj zakupy
                                    </button>
                                <a/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <% products.forEach(function(product) { %>
                        <div class="row">
                            <div class="col-xs-2"><img class="img-responsive" src="http://placehold.it/100x70">
                            </div>
                            <div class="col-xs-4">
                                <h4 class="product-name"><strong><%= product.name %></strong></h4>
                                <h4><small><%= product.description %></small></h4>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-6 text-right">
                                    <h6><strong><%= product.price %> <span class="text-muted">zł</span></strong></h6>
                                </div>
                                <div class="col-xs-4">
                                    <input type="text" class="form-control input-sm" value="<%=product.quantity%>">
                                </div>
                                <div class="col-xs-2">
                                    <a href="/remove_from_cart/<%= product._id %>/<%= product.name%>">
                                        <button type="button" class="btn btn-link btn-xs">
                                            <span class="glyphicon glyphicon-trash"> </span>
                                        </button>
                                    <a/>
                                </div>
                            </div>
                        </div>
                        <hr>
                    <% }); %>
                    
                </div>
                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-9">
                            <h4 class="text-right">Razem <strong><%= total %> zł</strong></h4>
                        </div>
                        <div class="col-xs-3">
                            <a href="/checkout">
                                <button type="button" class="btn btn-success btn-block">
                                    Zapłać
                                </button>
                            <a/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


